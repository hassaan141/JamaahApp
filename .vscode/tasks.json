{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Typecheck & Lint",
      "type": "shell",
      "command": "npm",
      "args": ["run", "-s", "typecheck", "&&", "npm", "run", "-s", "lint"],
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": "build"
    },
    {
      "label": "Typecheck and Lint",
      "type": "shell",
      "command": "npm run -s typecheck && npm run -s lint",
      "problemMatcher": ["$tsc", "$eslint - stylish"]
    }
  ]
}
